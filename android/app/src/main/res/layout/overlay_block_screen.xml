<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlayRoot"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FF111827"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <TextView
        android:id="@+id/txtMessage"
        android:text="â˜• Take a breath.\nThis moment belongs to your focus."
        android:textColor="#F9FAFB"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:id="@+id/btnBack"
        android:text="Stay Focused"
        android:textAllCaps="false"
        android:background="@drawable/pomodo_button"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>
